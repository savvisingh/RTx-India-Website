<script>
$(function(){
    $('#dp2').datepicker().on('changeDate', function(){
          $('#dp2').datepicker('hide');
      var dateToCompare = new Date($('#dp2').val());
      var today = new Date();
      var yesterday = today.setDate(today.getDate() - 1);
    //alert(yesterday);
     // if (dateToCompare < new Date()) {
        if (dateToCompare < yesterday) {
     alert("You cannot select a day past than today!");
       $('#dp2').val('');
  }
  });
  
$('#dpfrom').datepicker().on('changeDate', function(){
     $('#dpfrom').datepicker('hide');
  
});
$('#dpto').datepicker().on('changeDate', function(){
     $('#dpto').datepicker('hide');
 


});
});




function checkbox_click( obj){

if(document.getElementById('labour_required').checked){
  
           document.getElementById('no_of_labourers').style.visibility='visible'; 
            document.getElementById('no_of_labourers').display='block'; 
         
                 }
           else {
            document.getElementById('no_of_labourers').style.visibility='hidden'; 
            document.getElementById('no_of_labourers').display='none'; 
        
           }
}
}
   

    


</script>
        
